@model List<EntityLayer.DTOs.CartItemDto>
@{
    ViewData["Title"] = "Alışveriş Sepeti";
    var cartTotal = ViewBag.CartTotal ?? 0m;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-shopping-cart me-2"></i>Alışveriş Sepeti
            </h2>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Sepetim (@Model.Sum(x => x.Quantity) ürün)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Ürün</th>
                                        <th>Birim Fiyat</th>
                                        <th>Miktar</th>
                                        <th>Toplam</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0">
                                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                        {
                                                            <img src="@item.ImageUrl" alt="@item.ProductName"
                                                                 class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;"
                                                                 onerror="this.src='https://via.placeholder.com/60x60?text=Ürün'">
                                                        }
                                                        else
                                                        {
                                                            <img src="https://via.placeholder.com/60x60?text=Ürün"
                                                                 alt="@item.ProductName"
                                                                 class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                                        }
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <h6 class="mb-1">@item.ProductName</h6>
                                                        <small class="text-muted">Stok: @item.MaxStock</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">@item.UnitPrice.ToString("C2")</td>
                                            <td class="align-middle">
                                                <div class="input-group input-group-sm" style="width: 120px;">
                                                    <button class="btn btn-outline-secondary"
                                                            onclick="updateQuantity(@item.ProductId, @item.Quantity - 1)"
                                                            @(item.Quantity <= 1 ? "disabled" : "")>
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <input type="number" class="form-control text-center"
                                                           value="@item.Quantity" min="1" max="@item.MaxStock"
                                                           id="quantity-@item.ProductId"
                                                           onchange="updateQuantity(@item.ProductId, this.value)">
                                                    <button class="btn btn-outline-secondary"
                                                            onclick="updateQuantity(@item.ProductId, @item.Quantity + 1)"
                                                            @(item.Quantity >= item.MaxStock ? "disabled" : "")>
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="align-middle fw-bold">@item.TotalPrice.ToString("C2")</td>
                                            <td class="align-middle">
                                                <button class="btn btn-outline-danger btn-sm"
                                                        onclick="removeFromCart(@item.ProductId)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sipariş Özeti</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Toplam Ürün:</span>
                            <span>@Model.Sum(x => x.Quantity) adet</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Toplam Tutar:</span>
                            <span class="fw-bold fs-5 text-success">@cartTotal.ToString("C2")</span>
                        </div>

                        <form method="post" asp-action="Checkout" id="checkoutForm">
                            <div class="mb-3">
                                <label class="form-label">Sipariş Notu (Opsiyonel)</label>
                                <textarea name="orderNote" class="form-control" rows="2" 
                                          placeholder="Siparişinizle ilgili notlar..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-success w-100 btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Siparişi Tamamla
                            </button>
                        </form>

                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-arrow-left me-2"></i>Alışverişe Devam Et
                            </a>
                            <button class="btn btn-outline-danger w-100 mt-2" onclick="clearCart()">
                                <i class="fas fa-trash me-2"></i>Sepeti Temizle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">Sepetiniz Boş</h3>
            <p class="text-muted">Alışverişe başlamak için ürünleri sepete ekleyin.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Alışverişe Başla
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Sepet güncelleme
        function updateQuantity(productId, newQuantity) {
            if (newQuantity < 1) newQuantity = 1;

            $.post('@Url.Action("UpdateCart", "Cart")', {
                productId: productId,
                quantity: parseInt(newQuantity)
            }, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert('Güncelleme başarısız: ' + response.message);
                }
            }).fail(function() {
                alert('Sunucu hatası! Lütfen tekrar deneyin.');
            });
        }

        // Sepetten çıkarma
        function removeFromCart(productId) {
            if (confirm('Bu ürünü sepetinizden çıkarmak istediğinizden emin misiniz?')) {
                $.post('@Url.Action("RemoveFromCart", "Cart")', {
                    productId: productId
                }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Silme başarısız: ' + response.message);
                    }
                }).fail(function() {
                    alert('Sunucu hatası! Lütfen tekrar deneyin.');
                });
            }
        }

        // Sepeti temizle
        function clearCart() {
            if (confirm('Sepetinizi tamamen temizlemek istediğinizden emin misiniz?')) {
                window.location.href = '@Url.Action("ClearCart", "Cart")';
            }
        }

        // Sipariş formu gönderiminde onay
        $('#checkoutForm').on('submit', function(e) {
            if (!confirm('Siparişi tamamlamak istediğinizden emin misiniz?')) {
                e.preventDefault();
                return false;
            }
            
            // Butonu devre dışı bırak ve loading state göster
            var submitBtn = $(this).find('button[type="submit"]');
            submitBtn.prop('disabled', true);
            submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>İşleniyor...');
        });
    </script>
}