@using System.Security.Claims
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stok Yönetim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .user-info {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1rem;
            border-radius: 0 0 10px 10px;
            margin-bottom: 2rem;
        }

        .current-date {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .cart-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: #dc3545;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            font-size: 0.7rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-item .nav-link.active {
            background-color: rgba(255,255,255,0.1);
            border-radius: 5px;
        }
    </style>
</head>
<body>
    @{
        // Kullanıcı bilgilerini bir kere alalım
        var isAuthenticated = User.Identity.IsAuthenticated;
        var userRole = User.FindFirst("UserRole")?.Value;
        var userName = User.FindFirst(ClaimTypes.Name)?.Value ?? User.FindFirst("UserName")?.Value;
    }

    <header>
        <!-- TEK NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-boxes me-2"></i>Stok Yönetim
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Sol Menü -->
                    <ul class="navbar-nav me-auto">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                                   href="@Url.Action("Index", "Home")">
                                    <i class="fas fa-home me-1"></i>Ana Sayfa
                                </a>
                            </li>

                            @if (userRole == "1")
                            {
                                <!-- Admin Menü -->
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")"
                                       href="@Url.Action("Index", "Admin")">
                                        <i class="fas fa-cog me-1"></i>Admin
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")"
                                       href="@Url.Action("Users", "Admin")">
                                        <i class="fas fa-users me-1"></i>Kullanıcılar
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Products" ? "active" : "")"
                                       href="@Url.Action("Products", "Admin")">
                                        <i class="fas fa-box me-1"></i>Ürünler
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")"
                                       href="@Url.Action("Index", "Order")">
                                        <i class="fas fa-shopping-cart me-1"></i>Siparişler
                                    </a>
                                </li>
                            }
                            else
                            {
                                <!-- Müşteri Menü -->
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")"
                                       href="@Url.Action("Index", "Order")">
                                        <i class="fas fa-list me-1"></i>Siparişlerim
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- Giriş yapmamış kullanıcılar için menü -->
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">
                                    <i class="fas fa-home me-1"></i>Ana Sayfa
                                </a>
                            </li>
                           
                        }
                    </ul>

                    <!-- Sağ Menü -->
                    @if (isAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <!-- Sepet (Sadece Müşteri) -->
                            @if (userRole == "2")
                            {
                                <!-- Navbar içinde sepet ikonu -->
                                <li class="nav-item">
                                    <a class="nav-link position-relative" href="@Url.Action("Index", "Cart")">
                                        <i class="fas fa-shopping-cart"></i>
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-item-count">
                                            0
                                        </span>
                                    </a>
                                </li>
                            }

                            <!-- Kullanıcı Bilgisi -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-2"></i>
                                    @userName
                                    @if (userRole == "1")
                                    {
                                        <span class="badge bg-danger ms-2">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary ms-2">Kullanıcı</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    
                                    <li><a class="dropdown-item" href="@Url.Action("Logout", "Login")"><i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- Giriş yapmamış kullanıcılar için sağ menü -->
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Login")">
                                    <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Login")">
                                    <i class="fas fa-user-plus me-1"></i>Kayıt Ol
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Kullanıcı Bilgi ve Tarih -->
    @if (isAuthenticated)
    {
        <div class="user-info">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h4 class="mb-1">
                            @if (userRole == "1")
                            {
                                <text>Admin Paneli</text>
                            }
                            else
                            {
                                <text>Hoş Geldiniz, @userName</text>
                            }
                        </h4>
                        <p class="mb-0">Sistem istatistikleri ve hızlı yönetim</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="current-date">
                            <i class="fas fa-calendar me-1"></i>
                            @DateTime.Now.ToString("dd MMMM yyyy - dddd")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sepet sayacı güncelleme -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            updateCartItemCount();
        });
        function updateCartItemCount() {
            @if (isAuthenticated && userRole == "2")
            {
                    <text>
                    fetch('@Url.Action("GetCartItemCount", "Cart")')
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(count => {
                            const cartBadge = document.getElementById('cartItemCount');
                            if (cartBadge) {
                                cartBadge.textContent = count;
                            }
                        })
                        .catch(error => {
                            console.error('Sepet sayacı güncellenirken hata:', error);
                            const cartBadge = document.getElementById('cartItemCount');
                            if (cartBadge) {
                                cartBadge.textContent = '0';
                            }
                        });
                    </text>
            }
        }

        function updateCartBadge(count) {
            const cartBadge = document.getElementById('cartItemCount');
            if (cartBadge) {
                cartBadge.textContent = count;
                cartBadge.classList.add('pulse-animation');
                setTimeout(function() {
                    cartBadge.classList.remove('pulse-animation');
                }, 500);
            }
        }
    </script>

    <style>
        .pulse-animation {
            animation: pulse 0.5s ease-in-out;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.2);
            }

            100% {
                transform: scale(1);
            }
        }
    </style>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>