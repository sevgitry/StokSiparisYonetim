@using System.Security.Claims
@{
    ViewData["Title"] = "Erişim Engellendi";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 text-center">
            <!-- İkon ve Başlık -->
            <div class="mb-4">
                <i class="fas fa-ban fa-5x text-danger mb-3"></i>
                <h1 class="text-danger">Erişim Engellendi</h1>
            </div>

            <!-- Mesaj -->
            <div class="card shadow">
                <div class="card-body py-4">
                    <h4 class="card-title text-dark mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>Yetkiniz Yok
                    </h4>
                    <p class="card-text text-muted mb-4">
                        Bu sayfaya erişim izniniz bulunmamaktadır.
                        Eğer bu bir hata olduğunu düşünüyorsanız, lütfen sistem yöneticinizle iletişime geçin.
                    </p>

                    <!-- Kullanıcı Bilgisi -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-circle me-2 fa-lg"></i>
                                <div>
                                    <strong>@User.FindFirst(ClaimTypes.Name)?.Value</strong>
                                    <br>
                                    <small class="text-muted">
                                        Rol:
                                        @if (User.FindFirst("UserRole")?.Value == "1")
                                        {
                                            <span class="badge bg-danger">Admin</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Müşteri</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Butonlar -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-md-2">
                            <i class="fas fa-home me-1"></i>Ana Sayfaya Dön
                        </a>
                        <a href="@Url.Action("Index", "Login")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-1"></i>Farklı Hesap ile Giriş Yap
                        </a>
                    </div>
                </div>
            </div>

            <!-- Ek Bilgiler -->
            <div class="mt-4">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-shield-alt fa-2x text-warning mb-2"></i>
                            <h6>Güvenlik</h6>
                            <small class="text-muted">Yetki kontrolleri aktif</small>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-user-lock fa-2x text-info mb-2"></i>
                            <h6>Erişim</h6>
                            <small class="text-muted">Rol bazlı erişim</small>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-headset fa-2x text-success mb-2"></i>
                            <h6>Destek</h6>
                            <small class="text-muted">Yardım için ulaşın</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 15px;
        }

        .btn {
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
        }

        .alert {
            border-radius: 10px;
            border: none;
        }

        .fa-ban {
            animation: shake 0.5s ease-in-out;
        }

        @@keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-5px);
            }

            75% {
                transform: translateX(5px);
            }
        }
    </style>
}