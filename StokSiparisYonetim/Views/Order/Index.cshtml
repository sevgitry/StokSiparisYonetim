@model List<EntityLayer.DTOs.Order.OrderResponseDto>
@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-clipboard-list me-2"></i>Siparişlerim
            </h2>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Sipariş No</th>
                                <th>Müşteri</th>
                                <th>Tarih</th>
                                <th>Toplam Tutar</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>#@order.Id</td>
                                    <td>@order.CustomerName</td>
                                    <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td class="fw-bold">@order.TotalAmount.ToString("C2")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(order.Status)">
                                            @order.StatusText
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "Order", new { id = order.Id })"
                                               class="btn btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            @if (order.Status == 1) // Bekliyor
                                            {
                                                <form method="post" asp-action="ApproveOrder" class="d-inline">
                                                    <input type="hidden" name="id" value="@order.Id" />
                                                    <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(order.RowVersion)" />
                                                    <button type="submit" class="btn btn-outline-success"
                                                            onclick="return confirm('Siparişi onaylamak istediğinizden emin misiniz?')">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>

                                                <form method="post" asp-action="CancelOrder" class="d-inline">
                                                    <input type="hidden" name="id" value="@order.Id" />
                                                    <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(order.RowVersion)" />
                                                    <button type="submit" class="btn btn-outline-danger"
                                                            onclick="return confirm('Siparişi iptal etmek istediğinizden emin misiniz? Stok iade edilecek.')">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            }
                                            else if (order.Status == 2) // Onaylandı
                                            {
                                                <form method="post" asp-action="CancelOrder" class="d-inline">
                                                    <input type="hidden" name="id" value="@order.Id" />
                                                    <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(order.RowVersion)" />
                                                    <button type="submit" class="btn btn-outline-danger"
                                                            onclick="return confirm('Siparişi iptal etmek istediğinizden emin misiniz? Stok iade edilecek.')">
                                                        <i class="fas fa-times"></i> İptal Et
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">Henüz siparişiniz yok</h3>
            <p class="text-muted">İlk siparişinizi vermek için alışverişe başlayın.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Alışverişe Başla
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        .badge {
            font-size: 0.8rem;
            padding: 0.5em 0.75em;
        }
    </style>
}

@functions {
    public string GetStatusBadgeClass(int status)
    {
        return status switch
        {
            1 => "bg-warning", // Bekliyor
            2 => "bg-success", // Onaylandı
            3 => "bg-danger",  // İptal Edildi
            _ => "bg-secondary"
        };
    }
}